<h2><%= t('single_game')%></h2>
<% if (!@categories.nil?)%>
  <div id="categories">
  <% @categories.each do |category| %>
  	 <div class = "category">
 	 <%= link_to category.title, single_play_path(category.id) %>
 	 </div>
  <% end %>
  <% end %>
  </div>
  <div id = "chat">
  <ul id = "messages">
  	<% render 'message' %>
  </ul>
  <%= form_for Message.new, :remote => true, :authenticity_token => true, :format => :js do |f| %>
   <%= f.text_field :content %>
   <%= f.submit(t('send')) %>
  <% end %>
  </div>
