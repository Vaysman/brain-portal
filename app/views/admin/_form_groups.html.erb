<% if @group.errors.any? %>
  <div id="error_explanation">
    
    <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
<%= form_for @group, url: {action: @action_title} do |f| %>
	<p>
	<%= f.label(:title, t('group_title')) %>
	<%= f.text_field :title %>
	</p>
  <p>
  <%= f.label(:is_default, t('group_is_default')) %>
  <%= f.check_box :is_default %>
  </p>
  <p>
    <% if !@group.new_record?%>
    <table>
      <%  @actions.each do |key, action|%>
      <tr>
        <% action.each do |act| %>
        <td><%= act[:title] %></td>
        <% @actions_title.each do |keyt, title|%>
          <% title.each do |tit|%>
            <td><%= check_box_tag ('actions['+key.to_s+']['+keyt.to_s+']') %>
                   <%= label_tag (tit[:title])%></td>
          <% end %>
          <% end %>
        <% end %>
      </tr>
      <% end %>
    <% end %>
    </table>
  </p>
	<%= f.submit(t('save_button'))%>
<% end %>